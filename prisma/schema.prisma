// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  gender     String?
  university String?
  uniqueCode String
  // Access permissions - all default to false except wizaryExam
  hasWizaryExamAccess    Boolean  @default(true)  // All users have access to wizary exam by default
  hasApproachAccess      Boolean  @default(false) // Admin controlled
  hasQbankAccess         Boolean  @default(false) // Admin controlled
  hasCoursesAccess       Boolean  @default(false) // Admin controlled
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  responses UserResponse[]

  @@map("users")
}

model UserResponse {
  id         String   @id @default(cuid())
  userId     String
  questionId String   // ID of the question from qbank
  userAnswer Int      // -1 (no answer), 0, 1, 2, 3, 4 (A, B, C, D, E)
  isCorrect  Boolean  // Whether the answer was correct
  isFlagged  Boolean  @default(false) // Whether user flagged this question
  answeredAt DateTime @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId]) // One response per user per question
  @@map("user_responses")
}

model UniqueCode {
  id        String    @id @default(cuid())
  code      String    @unique
  used      Boolean   @default(false)
  usedBy    String?
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("unique_codes")
}

model Exam {
  id         String   @id @default(cuid())
  title      String
  subject    String
  examTime   Int
  order      Int      @default(1)
  secretCode String   @default("HaiderAlaa")
  questions  String   // JSON string
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("exams")
}

model KeyValue {
  key       String   @id
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("kv_store")
}