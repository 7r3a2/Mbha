// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  gender     String?
  university String?
  uniqueCode String
  // Access permissions - all default to false except wizaryExam
  hasWizaryExamAccess    Boolean  @default(true)  // All users have access to wizary exam by default
  hasApproachAccess      Boolean  @default(false) // Admin controlled
  hasQbankAccess         Boolean  @default(false) // Admin controlled
  hasCoursesAccess       Boolean  @default(false) // Admin controlled
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model UniqueCode {
  id        String    @id @default(cuid())
  code      String    @unique
  used      Boolean   @default(false)
  usedBy    String?
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("unique_codes")
}

model Exam {
  id         String   @id @default(cuid())
  title      String
  subject    String
  examTime   Int
  order      Int      @default(1)
  secretCode String   @default("HaiderAlaa")
  questions  String   // JSON string
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("exams")
}

model KeyValue {
  key       String   @id
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("kv_store")
}